test_setup('Cal54');
save_cookies_in_history(1);
set_user_agent_to_actual_browser();
my($not_found, $uri);
my($actual_browser) = sub {
    home_page();
    $uri = get_uri();
    verify_no_text('noarchive');
    verify_text('connect.facebook.net');
    verify_link('>>');
    verify_link('mobile');
    verify_text('>Next<');
    visit_uri($not_found = "$uri?what=donotfindthis");
    verify_text("Your search didn't match any results.");
    verify_no_text('>Next<');
    return;
};
$actual_browser->();
set_user_agent_to_robot_search();
my($robot) = sub {
    my($search) = @_;
    home_page();
    $search ? verify_text('noarchive') : verify_no_text('noarchive');
    verify_no_text('connect.facebook.net');
    verify_no_link('>>');
    verify_no_link('mobile');
    verify_text('>Next<');
    visit_uri("$uri?what=hello");
    verify_uri(qr{\Q$uri\E$});
    visit_uri("$uri?what=");
    verify_uri(qr{\Q$uri\E$});
    visit_uri("$uri?when=" . Type_Date()->now_as_string);
    verify_uri(qr{\Q$uri\E$});
    visit_uri($not_found);
    verify_text('>Next<');
    my($uri) = get_content() =~ /<a class="title" href="(.+?)"/;
    b_die('improve href extraction')
	unless $uri;
    visit_uri($uri);
    verify_uri(qr{\Q$uri});
    verify_no_text('>Next<');
    return;
};
$robot->(1);
set_user_agent_to_robot_other();
$robot->(0);
reset_user_agent();
$actual_browser->();
